pygmentize -g <<"EOF"
L     #List (default all) actions, breakpoints and watch expressions 
L b   #List all breakpoint 
L a   #List all actions 
L w   #List all watches 
b [line] [condition] #1 33 $x > 30 
b [line] [condition] #1 33 /pattern/i b . 

1   #list source 
-   #list source previous 
.   #list source current https://perldoc.perl.org/perldebug.html 
EOF
